!!!
%html{ :lang => I18n.locale }
  %head
    %title 
      = "Fosbury #{@title ? ':' : ''} #{@title}"
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-type" }
    != stylesheet_link_tag 'application'
  %body
    #site-header
      %h1!= link_to_unless_current("Fosbury", root_url) 
    .content
      != yield
    #footer
      %ul
        %li.footer-item!= t(:built_by, :link => link_to('mySociety', 'http://mysociety.org'))
        %li.footer-item!= t(:powered_by, :link => link_to('Easynet', 'http://www.easynet.com'))  
